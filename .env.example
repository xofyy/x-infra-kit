# ===========================================
# x-infra-kit Configuration
# ===========================================
# Copy this file to .env and update the values

# GCP Configuration (Required)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west1
GCP_ZONE=europe-west1-a

# Environment (Required)
# Options: dev, staging, prod
ENV=dev

# Resource Prefix (Required)
# Used for naming convention: {prefix}-{env}-{resource}
PREFIX=myapp

# State Backend (Optional)
# Uncomment to enable remote state storage
# STATE_BUCKET=your-terraform-state-bucket
